# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=liquid_hotspot
DB_USER=postgres
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=3001
NODE_ENV=development

# RADIUS Configuration (for connecting to your existing FreeRADIUS server)
RADIUS_HOST=192.168.1.100  # IP of your existing FreeRADIUS server
RADIUS_PORT=1812           # Standard RADIUS authentication port
RADIUS_SECRET=your-existing-radius-secret  # Secret from your FreeRADIUS clients.conf
RADIUS_TIMEOUT=5000        # Timeout in milliseconds
RADIUS_RETRIES=3           # Number of retry attempts

# MikroTik Configuration (for authorizing users for internet access)
MIKROTIK_HOST=192.168.1.1        # IP of your MikroTik router
MIKROTIK_USERNAME=admin          # MikroTik admin username
MIKROTIK_PASSWORD=your-mikrotik-password  # MikroTik admin password
MIKROTIK_PORT=8728               # MikroTik API port (default 8728)

# FreeRADIUS Database Configuration (if different from main DB)
# Leave these empty to use the same database as above (recommended)
# RADIUS_DB_HOST=localhost   # FreeRADIUS database host
# RADIUS_DB_PORT=5432        # FreeRADIUS database port
# RADIUS_DB_NAME=radius      # FreeRADIUS database name
# RADIUS_DB_USER=radius      # FreeRADIUS database user
# RADIUS_DB_PASSWORD=radius_password  # FreeRADIUS database password

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123 